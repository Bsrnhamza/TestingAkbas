@model IEnumerable<TestingAkbas.Models.Fabric>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Quality Class</th>
            <th>Fabric Code</th>
            <th>Quality Name</th>
            <th>Quality Group</th>
            <th>Quality Composition</th>
            <th>Pattern Type</th>
            <th>Width</th>
            <th>Weight</th>
            <th>Raw Fabric Price</th>
            <th>Domestic Price</th>
            <th>Export Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.QualityClass)</td>
                <td>@Html.DisplayFor(modelItem => item.FabricCode)</td>
                <td>@Html.DisplayFor(modelItem => item.QualityName)</td>
                <td>@Html.DisplayFor(modelItem => item.QualityGroup)</td>
                <td>@Html.DisplayFor(modelItem => item.QualityComposition)</td>
                <td>@Html.DisplayFor(modelItem => item.PatternType)</td>
                <td>@Html.DisplayFor(modelItem => item.Width)</td>
                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                <td>@Html.DisplayFor(modelItem => item.RawFabricPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.DomesticPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.ExportPrice)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
